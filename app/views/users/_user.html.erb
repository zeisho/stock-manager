<li class="user-list">
  <%= gravatar_for user, size: 50 %>
  <%= link_to user.name, user, class: 'index-user-name' %>
  <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to "削除", user, method: :delete,
                              data: { confirm: "本当に削除しますか？"} %>
  <% end %>
</li>