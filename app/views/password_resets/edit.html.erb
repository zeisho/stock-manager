<% provide(:title, 'Reset password') %>
<h1>パスワード再設定</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url:password_reset_path(params[:id]) ) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    
      <%= hidden_field_tag :email, @user.email %>
      
      <%= f.label :password, "新しいパスワード" %>
      <span>（半角英数字6文字以上）</span>
      <%= f.password_field :password, class: 'form_controll' %>
      
      <%= f.label :password_comfirmation, "新しいパスワード（確認）" %>
      <%= f.password_field :password_confirmation, class: 'form_controll' %>
      
      <%= f.submit "パスワード変更", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
